{
	"mongo-persistor": 
	{
		"address": "vertx.mongopersistor",
		"host": "localhost",
		"port": 27017,
		"pool_size": 10,
		"db_name": "testdata"
	},

	"web-server": 
	{
		"web_root": "webroot",
		"port": 8080,
		"bridge": true,
		"inbound_permitted": 
		[
			{
				"address": "test.address"
			},

			{
				"address": "vertx.basicauthmanager.login"
			},

			{
				"address": "vertx.mongopersistor",
				"match": 
				{
					"action": "find",
					"collection": "comments"
				}
			},

			{
				"address": "vertx.mongopersistor",
				"match": 
				{
					"action": "save",
					"collection": "comments"
				}
			}
		]
	}
}